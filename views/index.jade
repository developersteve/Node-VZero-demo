extends layout

block content
    h1= title
    div.well
        form.form-horizontal(action='/process', method='POST', role='form', id='braintree-payment-form')
            div.form-group
                label.col-sm-3.control-label Amount (in USD)
                div.col-sm-9
                    input.form-control(type='text', name='amount', placeholder='6.66')
            div.form-group
                label.col-sm-3.control-label Card Number
                div.col-sm-9
                    input.form-control(type='text', size='20', autocomplete='off', data-encrypted-name='number', placeholder='XXXX XXXX XXXX XXXX')
            div.form-group
                label.col-sm-3.control-label CVV
                div.col-sm-9
                    input.form-control(type='text', size='4', autocomplete='off', data-encrypted-name='cvv', placeholder='XXX')
            div.form-group
                label.col-sm-3.control-label Expiration Date
                div.col-sm-9
                    input.form-control(type='text', data-encrypted-name='expiration_date', placeholder='MM/YYYY')
            div.form-group
                div.col-sm-9.col-sm-offset-3
                    input.btn.btn-primary(type='submit', id='submit')
    script(src='/javascripts/braintree.js', type='text/javascript')
    script.
        var braintree = Braintree.create('')
        braintree.onSubmitEncryptForm('braintree-payment-form')
